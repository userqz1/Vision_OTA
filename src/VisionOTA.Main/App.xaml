<Application x:Class="VisionOTA.Main.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:VisionOTA.Main.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/IndustrialTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
            <converters:StatusToColorConverter x:Key="StatusToColor"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibility"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
