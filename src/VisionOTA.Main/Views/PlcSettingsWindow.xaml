<Window x:Class="VisionOTA.Main.Views.PlcSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PLC 设置"
        Width="780" Height="555"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F3F0">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/IndustrialTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 连接配置 -->
        <GroupBox Grid.Row="0" Header="连接配置" Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="IP地址" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Column="1" Text="{Binding IpAddress}" Style="{StaticResource InputStyle}" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="2" Text="端口" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Column="3" Text="{Binding Port}" Style="{StaticResource InputStyle}" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="4" Text="超时ms" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Column="5" Text="{Binding Timeout}" Style="{StaticResource InputStyle}" Margin="0,0,10,0"/>
                <Button Grid.Column="6" Content="连接" Command="{Binding ConnectCommand}" Style="{StaticResource SuccessButtonStyle}" Width="60"/>
                <Button Grid.Column="7" Content="断开" Command="{Binding DisconnectCommand}" Style="{StaticResource DangerButtonStyle}" Width="60"/>
            </Grid>
        </GroupBox>

        <!-- 地址测试 -->
        <GroupBox Grid.Row="1" Header="地址读写测试" Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>

                <!-- 表头 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="名称" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="地址" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="类型" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="当前值" Style="{StaticResource LabelStyle}" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="5" Text="写入值" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>

                <!-- 瓶身旋转 -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="瓶身旋转" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding OutputValueAddress}" Style="{StaticResource InputStyle}" Margin="0,2,5,2"/>
                <ComboBox Grid.Row="1" Grid.Column="2" ItemsSource="{Binding DataTypes}" SelectedItem="{Binding OutputValueType}" Height="24" FontSize="11" Margin="0,2"/>
                <Border Grid.Row="1" Grid.Column="3" Background="#F0F0F0" Margin="2">
                    <TextBlock Text="{Binding OutputValueCurrent}" Style="{StaticResource BoldValueStyle}"/>
                </Border>
                <Button Grid.Row="1" Grid.Column="4" Content="读" Command="{Binding ReadOutputValueCommand}" Style="{StaticResource ButtonStyle}" MinWidth="35"/>
                <TextBox Grid.Row="1" Grid.Column="5" Text="{Binding OutputValueWrite}" Style="{StaticResource InputStyle}" Margin="2"/>
                <Button Grid.Row="1" Grid.Column="6" Content="写" Command="{Binding WriteOutputValueCommand}" Style="{StaticResource ButtonStyle}" MinWidth="35"/>

                <!-- 定位角度 -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="定位角度" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding RotationAngleAddress}" Style="{StaticResource InputStyle}" Margin="0,2,5,2"/>
                <ComboBox Grid.Row="2" Grid.Column="2" ItemsSource="{Binding DataTypes}" SelectedItem="{Binding RotationAngleType}" Height="24" FontSize="11" Margin="0,2"/>
                <Border Grid.Row="2" Grid.Column="3" Background="#F0F0F0" Margin="2">
                    <TextBlock Text="{Binding RotationAngleCurrent}" Style="{StaticResource BoldValueStyle}"/>
                </Border>
                <Button Grid.Row="2" Grid.Column="4" Content="读" Command="{Binding ReadRotationAngleCommand}" Style="{StaticResource ButtonStyle}" MinWidth="35"/>
                <TextBox Grid.Row="2" Grid.Column="5" Text="{Binding RotationAngleWrite}" Style="{StaticResource InputStyle}" Margin="2"/>
                <Button Grid.Row="2" Grid.Column="6" Content="写" Command="{Binding WriteRotationAngleCommand}" Style="{StaticResource ButtonStyle}" MinWidth="35"/>

                <!-- 产品合格 -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="产品合格" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ResultAddress}" Style="{StaticResource InputStyle}" Margin="0,2,5,2"/>
                <ComboBox Grid.Row="3" Grid.Column="2" ItemsSource="{Binding DataTypes}" SelectedItem="{Binding ResultType}" Height="24" FontSize="11" Margin="0,2"/>
                <Border Grid.Row="3" Grid.Column="3" Background="#F0F0F0" Margin="2">
                    <TextBlock Text="{Binding ResultCurrent}" Style="{StaticResource BoldValueStyle}"/>
                </Border>
                <Button Grid.Row="3" Grid.Column="4" Content="读" Command="{Binding ReadResultCommand}" Style="{StaticResource ButtonStyle}" MinWidth="35"/>
                <TextBox Grid.Row="3" Grid.Column="5" Text="{Binding ResultWrite}" Style="{StaticResource InputStyle}" Margin="2"/>
                <Button Grid.Row="3" Grid.Column="6" Content="写" Command="{Binding WriteResultCommand}" Style="{StaticResource ButtonStyle}" MinWidth="35"/>

                <!-- 瓶身旋转角度 (输入地址 - 启动时读取写入VisionMaster) -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="旋转角度" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding InputRotationAngleAddress}" Style="{StaticResource InputStyle}" Margin="0,2,5,2"/>
                <ComboBox Grid.Row="4" Grid.Column="2" ItemsSource="{Binding DataTypes}" SelectedItem="{Binding InputRotationAngleType}" Height="24" FontSize="11" Margin="0,2"/>
                <Border Grid.Row="4" Grid.Column="3" Background="#F0F0F0" Margin="2">
                    <TextBlock Text="{Binding InputRotationAngleCurrent}" Style="{StaticResource BoldValueStyle}"/>
                </Border>
                <Button Grid.Row="4" Grid.Column="4" Content="读" Command="{Binding ReadInputRotationAngleCommand}" Style="{StaticResource ButtonStyle}" MinWidth="35"/>
                <TextBox Grid.Row="4" Grid.Column="5" Text="{Binding InputRotationAngleWrite}" Style="{StaticResource InputStyle}" Margin="2"/>
                <Button Grid.Row="4" Grid.Column="6" Content="写" Command="{Binding WriteInputRotationAngleCommand}" Style="{StaticResource ButtonStyle}" MinWidth="35"/>
            </Grid>
        </GroupBox>

        <!-- 全部读取按钮 -->
        <Button Grid.Row="2" Content="读取全部" Command="{Binding ReadAllCommand}"
                Style="{StaticResource SecondaryButtonStyle}"
                Width="100" Height="32"
                HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="保存配置" Command="{Binding SaveCommand}" Style="{StaticResource ButtonStyle}" Width="90"/>
            <Button Content="关闭" Command="{Binding CancelCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="90" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
