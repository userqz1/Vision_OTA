<Window x:Class="VisionOTA.Main.Views.PlcSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:VisionOTA.Main.ViewModels"
        Title="PLC 设置"
        Width="780" Height="500"
        MinWidth="650" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        Background="#F5F3F0"
        Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/IndustrialTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- PLC地址行模板 -->
            <DataTemplate x:Key="PlcAddressRowTemplate">
                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="{Binding Name}" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputStyle}" Margin="0,0,5,0"/>
                    <ComboBox Grid.Column="2" ItemsSource="{x:Static vm:PlcAddressViewModel.DataTypes}"
                              SelectedItem="{Binding DataType}" Height="24" FontSize="11"/>
                    <Border Grid.Column="3" Background="#F0F0F0" Margin="2" CornerRadius="2">
                        <TextBlock Text="{Binding CurrentValue}" Style="{StaticResource BoldValueStyle}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Button Grid.Column="4" Content="读" Command="{Binding ReadCommand}"
                            Style="{StaticResource ButtonStyle}" MinWidth="35"/>
                    <TextBox Grid.Column="5" Text="{Binding WriteValue, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputStyle}" Margin="2"/>
                    <Button Grid.Column="6" Content="写" Command="{Binding WriteCommand}"
                            Style="{StaticResource ButtonStyle}" MinWidth="35"/>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 连接配置 -->
        <GroupBox Grid.Row="0" Header="连接配置" Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="IP地址" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Column="1" Text="{Binding IpAddress}" Style="{StaticResource InputStyle}" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="2" Text="端口" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Column="3" Text="{Binding Port}" Style="{StaticResource InputStyle}" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="4" Text="超时ms" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Column="5" Text="{Binding Timeout}" Style="{StaticResource InputStyle}" Margin="0,0,10,0"/>
                <Button Grid.Column="6" Content="连接" Command="{Binding ConnectCommand}" Style="{StaticResource SuccessButtonStyle}" Width="60"/>
                <Button Grid.Column="7" Content="断开" Command="{Binding DisconnectCommand}" Style="{StaticResource DangerButtonStyle}" Width="60"/>
            </Grid>
        </GroupBox>

        <!-- 输出地址 -->
        <GroupBox Grid.Row="1" Header="输出地址" Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 表头 -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="名称" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="地址" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                    <TextBlock Grid.Column="2" Text="类型" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                    <TextBlock Grid.Column="3" Text="当前值" Style="{StaticResource LabelStyle}" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="5" Text="写入值" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                </Grid>

                <!-- 输出地址列表 -->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding OutputAddresses}"
                              ItemTemplate="{StaticResource PlcAddressRowTemplate}"/>
            </Grid>
        </GroupBox>

        <!-- 输入地址 -->
        <GroupBox Grid.Row="2" Header="输入地址" Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 表头 -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="名称" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="地址" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                    <TextBlock Grid.Column="2" Text="类型" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                    <TextBlock Grid.Column="3" Text="当前值" Style="{StaticResource LabelStyle}" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="5" Text="写入值" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                </Grid>

                <!-- 输入地址列表 -->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding InputAddresses}"
                              ItemTemplate="{StaticResource PlcAddressRowTemplate}"/>
            </Grid>
        </GroupBox>

        <!-- 测试触发地址 -->
        <GroupBox Grid.Row="3" Header="测试触发地址" Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 表头 -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="名称" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="地址" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                    <TextBlock Grid.Column="2" Text="类型" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                    <TextBlock Grid.Column="3" Text="当前值" Style="{StaticResource LabelStyle}" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="5" Text="写入值" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                </Grid>

                <!-- 测试触发地址列表 -->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding TestTriggerAddresses}"
                              ItemTemplate="{StaticResource PlcAddressRowTemplate}"/>
            </Grid>
        </GroupBox>

        <!-- 全部读取按钮 -->
        <Button Grid.Row="4" Content="读取全部" Command="{Binding ReadAllCommand}"
                Style="{StaticResource SecondaryButtonStyle}"
                Width="100" Height="32"
                HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="保存配置" Command="{Binding SaveCommand}" Style="{StaticResource ButtonStyle}" Width="90"/>
            <Button Content="关闭" Command="{Binding CancelCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="90" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
