<Window x:Class="VisionOTA.Main.Views.PlcSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PLC 设置"
        Width="700" Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F3F0">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#555555"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#AAAAAA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#2E7D32"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#AAAAAA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#C62828"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#AAAAAA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E8E4DF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D8D4CF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 连接配置 -->
        <GroupBox Grid.Row="0" Header="连接配置" Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="IP地址" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Column="1" Text="{Binding IpAddress}" Style="{StaticResource InputStyle}" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="2" Text="端口" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Column="3" Text="{Binding Port}" Style="{StaticResource InputStyle}" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="4" Text="超时ms" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Column="5" Text="{Binding Timeout}" Style="{StaticResource InputStyle}" Margin="0,0,10,0"/>
                <Button Grid.Column="6" Content="连接" Command="{Binding ConnectCommand}" Style="{StaticResource SuccessButtonStyle}" Width="60"/>
                <Button Grid.Column="7" Content="断开" Command="{Binding DisconnectCommand}" Style="{StaticResource DangerButtonStyle}" Width="60"/>
            </Grid>
        </GroupBox>

        <!-- 地址测试 -->
        <GroupBox Grid.Row="1" Header="地址读写测试" Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>

                <!-- 表头 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="名称" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="地址" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="类型" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="当前值" Style="{StaticResource LabelStyle}" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="5" Text="写入值" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>

                <!-- 输出值 -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="输出值" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding OutputValueAddress}" Style="{StaticResource InputStyle}" Margin="0,2,5,2"/>
                <ComboBox Grid.Row="1" Grid.Column="2" ItemsSource="{Binding DataTypes}" SelectedItem="{Binding OutputValueType}" Height="24" FontSize="11" Margin="0,2"/>
                <Border Grid.Row="1" Grid.Column="3" Background="#F0F0F0" Margin="2">
                    <TextBlock Text="{Binding OutputValueCurrent}" Style="{StaticResource ValueStyle}"/>
                </Border>
                <Button Grid.Row="1" Grid.Column="4" Content="读" Command="{Binding ReadOutputValueCommand}" Style="{StaticResource ButtonStyle}"/>
                <TextBox Grid.Row="1" Grid.Column="5" Text="{Binding OutputValueWrite}" Style="{StaticResource InputStyle}" Margin="2"/>
                <Button Grid.Row="1" Grid.Column="6" Content="写" Command="{Binding WriteOutputValueCommand}" Style="{StaticResource ButtonStyle}"/>

                <!-- 旋转角度 -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="旋转角度" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding RotationAngleAddress}" Style="{StaticResource InputStyle}" Margin="0,2,5,2"/>
                <ComboBox Grid.Row="2" Grid.Column="2" ItemsSource="{Binding DataTypes}" SelectedItem="{Binding RotationAngleType}" Height="24" FontSize="11" Margin="0,2"/>
                <Border Grid.Row="2" Grid.Column="3" Background="#F0F0F0" Margin="2">
                    <TextBlock Text="{Binding RotationAngleCurrent}" Style="{StaticResource ValueStyle}"/>
                </Border>
                <Button Grid.Row="2" Grid.Column="4" Content="读" Command="{Binding ReadRotationAngleCommand}" Style="{StaticResource ButtonStyle}"/>
                <TextBox Grid.Row="2" Grid.Column="5" Text="{Binding RotationAngleWrite}" Style="{StaticResource InputStyle}" Margin="2"/>
                <Button Grid.Row="2" Grid.Column="6" Content="写" Command="{Binding WriteRotationAngleCommand}" Style="{StaticResource ButtonStyle}"/>

                <!-- 结果 -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="结果" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ResultAddress}" Style="{StaticResource InputStyle}" Margin="0,2,5,2"/>
                <ComboBox Grid.Row="3" Grid.Column="2" ItemsSource="{Binding DataTypes}" SelectedItem="{Binding ResultType}" Height="24" FontSize="11" Margin="0,2"/>
                <Border Grid.Row="3" Grid.Column="3" Background="#F0F0F0" Margin="2">
                    <TextBlock Text="{Binding ResultCurrent}" Style="{StaticResource ValueStyle}"/>
                </Border>
                <Button Grid.Row="3" Grid.Column="4" Content="读" Command="{Binding ReadResultCommand}" Style="{StaticResource ButtonStyle}"/>
                <TextBox Grid.Row="3" Grid.Column="5" Text="{Binding ResultWrite}" Style="{StaticResource InputStyle}" Margin="2"/>
                <Button Grid.Row="3" Grid.Column="6" Content="写" Command="{Binding WriteResultCommand}" Style="{StaticResource ButtonStyle}"/>
            </Grid>
        </GroupBox>

        <!-- 全部读取按钮 -->
        <Button Grid.Row="2" Content="读取全部" Command="{Binding ReadAllCommand}"
                Style="{StaticResource SecondaryButtonStyle}"
                Width="100" Height="32"
                HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="保存配置" Command="{Binding SaveCommand}" Style="{StaticResource ButtonStyle}" Width="90"/>
            <Button Content="关闭" Command="{Binding CancelCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="90" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
