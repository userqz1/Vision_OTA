<Window x:Class="VisionOTA.Main.Views.CameraSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:VisionOTA.Main.Controls"
        xmlns:converters="clr-namespace:VisionOTA.Main.Converters"
        Title="相机设置"
        Width="1100" Height="800"
        WindowStartupLocation="CenterOwner"
        Background="#F5F3F0">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/IndustrialTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibility"/>

            <!-- 图标按钮样式 -->
            <Style x:Key="IconButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="28"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Background" Value="#F0F0F0"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="2">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#D0D0D0"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 工位1 面阵相机 -->
        <Border Grid.Row="0" Grid.Column="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,8,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="168"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <Border Grid.Row="0" Background="#333333" Padding="10,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="工位1 - 面阵相机" Foreground="White" FontSize="14" FontWeight="Bold"/>
                        <Ellipse Width="10" Height="10" Margin="10,0,0,0"
                                 Fill="{Binding Station1.StatusColor}"/>
                    </StackPanel>
                </Border>

                <!-- 图像显示 -->
                <controls:ZoomableImageControl Grid.Row="1" Margin="10"
                    ImageSource="{Binding Station1.Image}"
                    ShowCrosshair="{Binding ShowCrosshair}"/>

                <!-- 参数区域 - 固定高度 -->
                <Grid Grid.Row="2" Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                    </Grid.RowDefinitions>

                    <!-- 第1行: 相机选择 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="相机:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" ItemsSource="{Binding Station1Cameras}"
                              SelectedItem="{Binding Station1SelectedCamera}" DisplayMemberPath="DisplayName"
                              Style="{StaticResource ComboStyle}" MaxDropDownHeight="200"/>
                    <Button Grid.Row="0" Grid.Column="4" Command="{Binding SearchStation1Command}"
                            Style="{StaticResource IconButtonStyle}" ToolTip="搜索相机" Margin="5,0,0,0">
                        <Image Source="/Icons/search.png" Width="16" Height="16"/>
                    </Button>

                    <!-- 第2行: UserId + 序列号 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="UserId:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Station1.UserId}" Style="{StaticResource InputStyle}"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="序列号:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Text="{Binding Station1.SerialDisplay}" Style="{StaticResource ValueStyle}"/>

                    <!-- 第3行: 名称 + 状态 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="名称:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Station1.FriendlyName}" Style="{StaticResource ValueStyle}"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="状态:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2" Text="{Binding Station1.StatusText}" Style="{StaticResource ValueStyle}"/>

                    <!-- 第4行: 曝光 + 增益 -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="曝光(us):" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Station1.Exposure}" Style="{StaticResource InputStyle}"/>
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="增益:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2" Text="{Binding Station1.Gain}" Style="{StaticResource InputStyle}"/>

                    <!-- 第5行: 触发源 -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="触发源:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4" ItemsSource="{Binding TriggerSources}"
                              SelectedItem="{Binding Station1.TriggerSource}" Style="{StaticResource ComboStyle}"/>

                    <!-- 第6行: 空 -->
                </Grid>

                <!-- 操作栏 -->
                <Border Grid.Row="3" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,8">
                        <!-- 连接/断开 -->
                        <Button Command="{Binding Station1.ToggleConnectionCommand}"
                                Style="{StaticResource IconButtonStyle}"
                                ToolTip="{Binding Station1.ConnectionButtonText}">
                            <Grid>
                                <Image Source="/Icons/power_on.png" Width="16" Height="16"
                                    Visibility="{Binding Station1.IsConnected, Converter={StaticResource InverseBoolToVisibility}}"/>
                                <Image Source="/Icons/power_off.png" Width="16" Height="16"
                                    Visibility="{Binding Station1.IsConnected, Converter={StaticResource BoolToVisibility}}"/>
                            </Grid>
                        </Button>

                        <Rectangle Width="1" Fill="#CCCCCC" Margin="8,2"/>

                        <!-- 采集/停止 -->
                        <Button Command="{Binding Station1.ToggleGrabCommand}"
                                Style="{StaticResource IconButtonStyle}"
                                ToolTip="{Binding Station1.GrabButtonText}">
                            <Grid>
                                <Image Source="/Icons/play.png" Width="16" Height="16"
                                    Visibility="{Binding Station1.IsGrabbing, Converter={StaticResource InverseBoolToVisibility}}"/>
                                <Image Source="/Icons/stop.png" Width="16" Height="16"
                                    Visibility="{Binding Station1.IsGrabbing, Converter={StaticResource BoolToVisibility}}"/>
                            </Grid>
                        </Button>

                        <Rectangle Width="1" Fill="#CCCCCC" Margin="8,2"/>

                        <!-- 保存图片 -->
                        <Button Command="{Binding Station1.SaveImageCommand}"
                                Style="{StaticResource IconButtonStyle}" ToolTip="保存图片">
                            <Image Source="/Icons/save.png" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 工位2 线扫相机 -->
        <Border Grid.Row="0" Grid.Column="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Margin="8,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="168"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <Border Grid.Row="0" Background="#333333" Padding="10,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="工位2 - 线扫相机" Foreground="White" FontSize="14" FontWeight="Bold"/>
                        <Ellipse Width="10" Height="10" Margin="10,0,0,0"
                                 Fill="{Binding Station2.StatusColor}"/>
                    </StackPanel>
                </Border>

                <!-- 图像显示 -->
                <controls:ZoomableImageControl Grid.Row="1" Margin="10"
                    ImageSource="{Binding Station2.Image}"
                    ShowCrosshair="{Binding ShowCrosshair}"/>

                <!-- 参数区域 - 固定高度 -->
                <Grid Grid.Row="2" Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                    </Grid.RowDefinitions>

                    <!-- 第1行: 相机选择 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="相机:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" ItemsSource="{Binding Station2Cameras}"
                              SelectedItem="{Binding Station2SelectedCamera}" DisplayMemberPath="DisplayName"
                              Style="{StaticResource ComboStyle}" MaxDropDownHeight="200"/>
                    <Button Grid.Row="0" Grid.Column="4" Command="{Binding SearchStation2Command}"
                            Style="{StaticResource IconButtonStyle}" ToolTip="搜索相机" Margin="5,0,0,0">
                        <Image Source="/Icons/search.png" Width="16" Height="16"/>
                    </Button>

                    <!-- 第2行: UserId + 序列号 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="UserId:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Station2.UserId}" Style="{StaticResource InputStyle}"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="序列号:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Text="{Binding Station2.SerialDisplay}" Style="{StaticResource ValueStyle}"/>

                    <!-- 第3行: 名称 + 状态 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="名称:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Station2.FriendlyName}" Style="{StaticResource ValueStyle}"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="状态:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2" Text="{Binding Station2.StatusText}" Style="{StaticResource ValueStyle}"/>

                    <!-- 第4行: 曝光 + 增益 -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="曝光(us):" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Station2.Exposure}" Style="{StaticResource InputStyle}"/>
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="增益:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2" Text="{Binding Station2.Gain}" Style="{StaticResource InputStyle}"/>

                    <!-- 第5行: 行频 -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="行频:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4" Text="{Binding Station2.LineRate}" Style="{StaticResource InputStyle}"/>

                    <!-- 第6行: 触发源 -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="触发源:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="4" ItemsSource="{Binding TriggerSources}"
                              SelectedItem="{Binding Station2.TriggerSource}" Style="{StaticResource ComboStyle}"/>
                </Grid>

                <!-- 操作栏 -->
                <Border Grid.Row="3" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,8">
                        <!-- 连接/断开 -->
                        <Button Command="{Binding Station2.ToggleConnectionCommand}"
                                Style="{StaticResource IconButtonStyle}"
                                ToolTip="{Binding Station2.ConnectionButtonText}">
                            <Grid>
                                <Image Source="/Icons/power_on.png" Width="16" Height="16"
                                    Visibility="{Binding Station2.IsConnected, Converter={StaticResource InverseBoolToVisibility}}"/>
                                <Image Source="/Icons/power_off.png" Width="16" Height="16"
                                    Visibility="{Binding Station2.IsConnected, Converter={StaticResource BoolToVisibility}}"/>
                            </Grid>
                        </Button>

                        <Rectangle Width="1" Fill="#CCCCCC" Margin="8,2"/>

                        <!-- 采集/停止 -->
                        <Button Command="{Binding Station2.ToggleGrabCommand}"
                                Style="{StaticResource IconButtonStyle}"
                                ToolTip="{Binding Station2.GrabButtonText}">
                            <Grid>
                                <Image Source="/Icons/play.png" Width="16" Height="16"
                                    Visibility="{Binding Station2.IsGrabbing, Converter={StaticResource InverseBoolToVisibility}}"/>
                                <Image Source="/Icons/stop.png" Width="16" Height="16"
                                    Visibility="{Binding Station2.IsGrabbing, Converter={StaticResource BoolToVisibility}}"/>
                            </Grid>
                        </Button>

                        <Rectangle Width="1" Fill="#CCCCCC" Margin="8,2"/>

                        <!-- 保存图片 -->
                        <Button Command="{Binding Station2.SaveImageCommand}"
                                Style="{StaticResource IconButtonStyle}" ToolTip="保存图片">
                            <Image Source="/Icons/save.png" Width="16" Height="16"/>
                        </Button>

                        <Rectangle Width="1" Fill="#CCCCCC" Margin="8,2"/>

                        <!-- 瓶身旋转 -->
                        <Button Content="{Binding BottleRotationButtonText}"
                                Command="{Binding ToggleBottleRotationCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="保存配置" Command="{Binding SaveCommand}" Style="{StaticResource ButtonStyle}" Width="90"/>
            <Button Content="关闭" Command="{Binding CloseCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="90" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
