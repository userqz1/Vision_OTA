<Window x:Class="VisionOTA.Main.Views.CameraSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="相机设置"
        Width="1100" Height="750"
        WindowStartupLocation="CenterOwner"
        Background="#F5F3F0">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ComboStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#555555"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#AAAAAA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#2E7D32"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#C62828"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E8E4DF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D8D4CF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 工位1 面阵相机 -->
        <Border Grid.Row="0" Grid.Column="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,8,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <Border Grid.Row="0" Background="#333333" Padding="10,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="工位1 - 面阵相机" Foreground="White" FontSize="14" FontWeight="Bold"/>
                        <Ellipse Width="10" Height="10" Margin="10,0,0,0"
                                 Fill="{Binding Station1StatusColor}"/>
                    </StackPanel>
                </Border>

                <!-- 图像显示 -->
                <Border Grid.Row="1" Background="#1A1A1A" Margin="10">
                    <Image Source="{Binding Station1Image}" Stretch="Uniform"/>
                </Border>

                <!-- 相机信息 -->
                <Grid Grid.Row="2" Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="相机:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Station1Cameras}"
                              SelectedItem="{Binding Station1SelectedCamera}" DisplayMemberPath="DisplayName"
                              Style="{StaticResource ComboStyle}"/>
                    <Button Grid.Row="0" Grid.Column="2" Content="搜索" Command="{Binding SearchStation1Command}"
                            Style="{StaticResource SecondaryButtonStyle}" Width="50" Margin="5,0,0,0"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Station1StatusText}" Style="{StaticResource ValueStyle}" Margin="10,0,0,0"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="UserId:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Station1UserId}" Style="{StaticResource InputStyle}"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="名称:" Style="{StaticResource LabelStyle}" Margin="15,0,8,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Station1FriendlyName}" Style="{StaticResource ValueStyle}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="曝光(us):" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Station1Exposure}" Style="{StaticResource InputStyle}"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="增益:" Style="{StaticResource LabelStyle}" Margin="15,0,8,0"/>
                    <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding Station1Gain}" Style="{StaticResource InputStyle}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="触发源:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding TriggerSources}"
                              SelectedItem="{Binding Station1TriggerSource}" Style="{StaticResource ComboStyle}"/>
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="触发边沿:" Style="{StaticResource LabelStyle}" Margin="15,0,8,0"/>
                    <ComboBox Grid.Row="3" Grid.Column="3" ItemsSource="{Binding TriggerEdges}"
                              SelectedItem="{Binding Station1TriggerEdge}" Style="{StaticResource ComboStyle}"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="序列号:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Station1SerialDisplay}" Style="{StaticResource ValueStyle}"/>
                </Grid>

                <!-- 控制按钮 -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="连接" Command="{Binding ConnectStation1Command}" Style="{StaticResource SuccessButtonStyle}"/>
                    <Button Content="断开" Command="{Binding DisconnectStation1Command}" Style="{StaticResource DangerButtonStyle}"/>
                    <Button Content="开始采集" Command="{Binding StartGrabStation1Command}" Style="{StaticResource ButtonStyle}"/>
                    <Button Content="停止采集" Command="{Binding StopGrabStation1Command}" Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="软触发" Command="{Binding SoftTriggerStation1Command}" Style="{StaticResource ButtonStyle}"/>
                    <Button Content="应用参数" Command="{Binding ApplyStation1Command}" Style="{StaticResource ButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 工位2 线扫相机 -->
        <Border Grid.Row="0" Grid.Column="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Margin="8,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <Border Grid.Row="0" Background="#333333" Padding="10,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="工位2 - 线扫相机" Foreground="White" FontSize="14" FontWeight="Bold"/>
                        <Ellipse Width="10" Height="10" Margin="10,0,0,0"
                                 Fill="{Binding Station2StatusColor}"/>
                    </StackPanel>
                </Border>

                <!-- 图像显示 -->
                <Border Grid.Row="1" Background="#1A1A1A" Margin="10">
                    <Image Source="{Binding Station2Image}" Stretch="Uniform"/>
                </Border>

                <!-- 相机信息 -->
                <Grid Grid.Row="2" Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="相机:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Station2Cameras}"
                              SelectedItem="{Binding Station2SelectedCamera}" DisplayMemberPath="DisplayName"
                              Style="{StaticResource ComboStyle}"/>
                    <Button Grid.Row="0" Grid.Column="2" Content="搜索" Command="{Binding SearchStation2Command}"
                            Style="{StaticResource SecondaryButtonStyle}" Width="50" Margin="5,0,0,0"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Station2StatusText}" Style="{StaticResource ValueStyle}" Margin="10,0,0,0"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="UserId:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Station2UserId}" Style="{StaticResource InputStyle}"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="名称:" Style="{StaticResource LabelStyle}" Margin="15,0,8,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Station2FriendlyName}" Style="{StaticResource ValueStyle}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="曝光(us):" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Station2Exposure}" Style="{StaticResource InputStyle}"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="增益:" Style="{StaticResource LabelStyle}" Margin="15,0,8,0"/>
                    <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding Station2Gain}" Style="{StaticResource InputStyle}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="行频:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Station2LineRate}" Style="{StaticResource InputStyle}"/>
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="行数:" Style="{StaticResource LabelStyle}" Margin="15,0,8,0"/>
                    <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding Station2LineCount}" Style="{StaticResource InputStyle}"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="触发源:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Row="4" Grid.Column="1" ItemsSource="{Binding TriggerSources}"
                              SelectedItem="{Binding Station2TriggerSource}" Style="{StaticResource ComboStyle}"/>
                    <TextBlock Grid.Row="4" Grid.Column="2" Text="触发边沿:" Style="{StaticResource LabelStyle}" Margin="15,0,8,0"/>
                    <ComboBox Grid.Row="4" Grid.Column="3" ItemsSource="{Binding TriggerEdges}"
                              SelectedItem="{Binding Station2TriggerEdge}" Style="{StaticResource ComboStyle}"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="序列号:" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Station2SerialDisplay}" Style="{StaticResource ValueStyle}"/>
                </Grid>

                <!-- 控制按钮 -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="连接" Command="{Binding ConnectStation2Command}" Style="{StaticResource SuccessButtonStyle}"/>
                    <Button Content="断开" Command="{Binding DisconnectStation2Command}" Style="{StaticResource DangerButtonStyle}"/>
                    <Button Content="开始采集" Command="{Binding StartGrabStation2Command}" Style="{StaticResource ButtonStyle}"/>
                    <Button Content="停止采集" Command="{Binding StopGrabStation2Command}" Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="软触发" Command="{Binding SoftTriggerStation2Command}" Style="{StaticResource ButtonStyle}"/>
                    <Button Content="应用参数" Command="{Binding ApplyStation2Command}" Style="{StaticResource ButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="保存配置" Command="{Binding SaveCommand}" Style="{StaticResource ButtonStyle}" Width="90"/>
            <Button Content="关闭" Command="{Binding CloseCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="90"/>
        </StackPanel>
    </Grid>
</Window>
