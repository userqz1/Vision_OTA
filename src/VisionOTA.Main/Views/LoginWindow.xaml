<Window x:Class="VisionOTA.Main.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VisionOTA - 登录"
        Width="400" Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource PrimaryBackgroundBrush}">

    <Grid>
        <Border Style="{StaticResource Card}"
                Margin="40"
                VerticalAlignment="Center">
            <StackPanel>
                <!-- 标题 -->
                <TextBlock Text="VisionOTA"
                           Style="{StaticResource HeaderLabel}"
                           FontSize="28"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="视觉检测系统"
                           Style="{StaticResource BodyLabel}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,32"/>

                <!-- 分隔线 -->
                <Rectangle Height="1"
                           Fill="{StaticResource BorderBrush}"
                           Margin="0,0,0,32"/>

                <!-- 用户名 -->
                <TextBlock Text="用户名"
                           Style="{StaticResource SubHeaderLabel}"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="UsernameBox"
                         Style="{StaticResource IndustrialTextBox}"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"/>

                <!-- 密码 -->
                <TextBlock Text="密码"
                           Style="{StaticResource SubHeaderLabel}"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource IndustrialPasswordBox}"
                             Margin="0,0,0,8"/>

                <!-- 记住用户名 -->
                <CheckBox Content="记住用户名"
                          IsChecked="{Binding RememberUsername}"
                          Foreground="{StaticResource SecondaryTextBrush}"
                          Margin="0,0,0,24"/>

                <!-- 错误信息 -->
                <TextBlock x:Name="ErrorMessage"
                           Text="{Binding ErrorMessage}"
                           Foreground="{StaticResource ErrorBrush}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,16"
                           Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}"/>

                <!-- 登录按钮 -->
                <Button Content="登录"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding LoginCommand}"
                        CommandParameter="{Binding ElementName=PasswordBox}"
                        IsDefault="True"/>
            </StackPanel>
        </Border>

        <!-- 版本信息 -->
        <TextBlock Text="v1.0.0"
                   Style="{StaticResource BodyLabel}"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="0,0,16,16"/>
    </Grid>
</Window>
