<Window x:Class="VisionOTA.Main.Views.VisionSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="算法设置"
        Width="520" Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F3F0">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E8E4DF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D8D4CF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BrowseButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具块路径 -->
        <GroupBox Grid.Row="0" Header="VisionPro工具块" Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="工位1" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Station1VppPath}" Style="{StaticResource InputStyle}"/>
                <Button Grid.Row="0" Grid.Column="2" Content="浏览" Command="{Binding BrowseStation1Command}" Style="{StaticResource BrowseButtonStyle}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="工位2" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Station2VppPath}" Style="{StaticResource InputStyle}"/>
                <Button Grid.Row="1" Grid.Column="2" Content="浏览" Command="{Binding BrowseStation2Command}" Style="{StaticResource BrowseButtonStyle}"/>
            </Grid>
        </GroupBox>

        <!-- 算法参数 -->
        <GroupBox Grid.Row="1" Header="算法参数" Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="匹配阈值" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ScoreThreshold}" Style="{StaticResource InputStyle}"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="超时(ms)" Style="{StaticResource LabelStyle}" Margin="15,0,10,0"/>
                <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding Timeout}" Style="{StaticResource InputStyle}"/>

                <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                          Content="显示中间结果"
                          IsChecked="{Binding ShowIntermediateResults}"
                          VerticalAlignment="Center" FontSize="13"/>
                <CheckBox Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
                          Content="启用图形标注"
                          IsChecked="{Binding EnableGraphicOverlay}"
                          VerticalAlignment="Center" FontSize="13"/>
            </Grid>
        </GroupBox>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="保存" Command="{Binding SaveCommand}" Style="{StaticResource ButtonStyle}" Margin="0,0,10,0"/>
            <Button Content="取消" Command="{Binding CancelCommand}" Style="{StaticResource SecondaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
