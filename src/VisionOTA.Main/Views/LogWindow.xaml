<Window x:Class="VisionOTA.Main.Views.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VisionOTA.Main.Converters"
        Title="系统日志"
        Width="800" Height="550"
        WindowStartupLocation="CenterOwner"
        Background="#F5F3F0">

    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E8E4DF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D8D4CF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="日期:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker SelectedDate="{Binding SelectedDate}" Width="120" VerticalAlignment="Center"/>
            <Button Content="加载" Command="{Binding LoadCommand}" Style="{StaticResource ButtonStyle}" Margin="10,0"/>
            <Button Content="刷新" Command="{Binding RefreshCommand}" Style="{StaticResource SecondaryButtonStyle}"/>
            <Separator Width="20" Background="Transparent"/>
            <TextBlock Text="筛选:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox SelectedItem="{Binding SelectedLevel}" Width="100" VerticalAlignment="Center">
                <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">全部</sys:String>
                <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Debug</sys:String>
                <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Info</sys:String>
                <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Warning</sys:String>
                <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Error</sys:String>
            </ComboBox>
            <Separator Width="20" Background="Transparent"/>
            <CheckBox Content="实时更新" IsChecked="{Binding IsRealTimeEnabled}" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- 日志列表 -->
        <Border Grid.Row="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="1">
            <ListBox ItemsSource="{Binding LogEntries}"
                     SelectedItem="{Binding SelectedEntry}"
                     FontFamily="Consolas" FontSize="12"
                     HorizontalContentAlignment="Stretch"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Padding="5,2">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Converter={x:Static local:LogLevelConverter.Instance}}" Value="Error">
                                            <Setter Property="Foreground" Value="#C62828"/>
                                            <Setter Property="Background" Value="#FFEBEE"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Converter={x:Static local:LogLevelConverter.Instance}}" Value="Warning">
                                            <Setter Property="Foreground" Value="#E65100"/>
                                            <Setter Property="Background" Value="#FFF3E0"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Converter={x:Static local:LogLevelConverter.Instance}}" Value="Info">
                                            <Setter Property="Foreground" Value="#1565C0"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Converter={x:Static local:LogLevelConverter.Instance}}" Value="Debug">
                                            <Setter Property="Foreground" Value="#666666"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- 底部状态 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}" Foreground="#666666"/>
            <TextBlock Text=" | " Foreground="#CCCCCC"/>
            <TextBlock Text="{Binding LogCount, StringFormat='共 {0} 条'}" Foreground="#666666"/>
        </StackPanel>
    </Grid>
</Window>
