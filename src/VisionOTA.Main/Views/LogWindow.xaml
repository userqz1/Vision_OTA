<Window x:Class="VisionOTA.Main.Views.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VisionOTA.Main.Converters"
        Title="系统日志"
        Width="900" Height="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F3F0">

    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E8E4DF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D8D4CF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ComboStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="26"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 第一行：日期和模块选择 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="日期:" Style="{StaticResource LabelStyle}"/>
                <DatePicker SelectedDate="{Binding SelectedDate}" Width="120" VerticalAlignment="Center"/>

                <Separator Width="15" Background="Transparent"/>

                <TextBlock Text="模块:" Style="{StaticResource LabelStyle}"/>
                <ComboBox ItemsSource="{Binding AvailableModules}"
                          SelectedItem="{Binding SelectedModule}"
                          Width="100" Style="{StaticResource ComboStyle}"/>

                <Separator Width="15" Background="Transparent"/>

                <TextBlock Text="级别:" Style="{StaticResource LabelStyle}"/>
                <ComboBox ItemsSource="{Binding LogLevels}"
                          SelectedItem="{Binding SelectedLevel}"
                          Width="90" Style="{StaticResource ComboStyle}"/>

                <Separator Width="15" Background="Transparent"/>

                <Button Content="加载" Command="{Binding LoadCommand}" Style="{StaticResource ButtonStyle}"/>
                <Button Content="刷新" Command="{Binding RefreshCommand}" Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>

            <!-- 第二行：实时更新和打开文件夹 -->
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <CheckBox Content="实时更新" IsChecked="{Binding IsRealTimeEnabled}"
                          VerticalAlignment="Center" Margin="0,0,20,0"/>
                <Button Content="打开日志文件夹" Command="{Binding OpenFolderCommand}"
                        Style="{StaticResource SecondaryButtonStyle}" MinWidth="110"/>
            </StackPanel>
        </Grid>

        <!-- 日志列表 -->
        <Border Grid.Row="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="1">
            <ListBox ItemsSource="{Binding LogEntries}"
                     SelectedItem="{Binding SelectedEntry}"
                     FontFamily="Consolas" FontSize="11"
                     HorizontalContentAlignment="Stretch"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     VirtualizingStackPanel.IsVirtualizing="True"
                     VirtualizingStackPanel.VirtualizationMode="Recycling">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Padding="5,2">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Converter={x:Static local:LogLevelConverter.Instance}}" Value="Fatal">
                                            <Setter Property="Foreground" Value="#B71C1C"/>
                                            <Setter Property="Background" Value="#FFCDD2"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Converter={x:Static local:LogLevelConverter.Instance}}" Value="Error">
                                            <Setter Property="Foreground" Value="#C62828"/>
                                            <Setter Property="Background" Value="#FFEBEE"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Converter={x:Static local:LogLevelConverter.Instance}}" Value="Warning">
                                            <Setter Property="Foreground" Value="#E65100"/>
                                            <Setter Property="Background" Value="#FFF3E0"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Converter={x:Static local:LogLevelConverter.Instance}}" Value="Info">
                                            <Setter Property="Foreground" Value="#1565C0"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Converter={x:Static local:LogLevelConverter.Instance}}" Value="Debug">
                                            <Setter Property="Foreground" Value="#666666"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- 底部状态 -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="{Binding StatusMessage}" Foreground="#666666"/>
            </StackPanel>

            <TextBlock Grid.Column="1" Text="{Binding LogCount, StringFormat='共 {0} 条'}"
                       Foreground="#666666" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Window>
